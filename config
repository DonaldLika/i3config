### i3status.tpl.conf ###
bar {
    id laptop
    output DP-3
    status_command "py3status \
        --dbus-notify \
        --timeout 1 \
        -c /home/oliver/.i3/i3status.full.conf \
        -i /home/oliver/.i3/py3status \
        -l /home/oliver/.i3/py3status.DP-3-laptop.log"
    position bottom
    tray_padding 0
    tray_output primary
    font pango:Deja Vu Sans Mono, FontAwesome 7
    mode hide
    modifier Mod4
    bindsym button4 nop
    bindsym button5 nop
    separator_symbol  ‚ïë 
    colors {
        background #073642
        statusline #fdf6e3
        separator  #657b83
        focused_background #002b36
        focused_statusline #fdf6e3
        focused_separator  #b58900
        focused_workspace  #073642 #859900 #fdf6e3
        active_workspace   #073642 #002b36 #859900
        inactive_workspace #073642 #073642 #93a1a1
        urgent_workspace   #fdf6e3 #cb4b16 #fdf6e3
        binding_mode       #fdf6e3 #2aa198 #fdf6e3
    }
}
