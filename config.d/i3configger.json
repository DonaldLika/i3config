{
  "bars": {
    "defaults": {
      "font": "pango:Fira Code 12, Font Awesome 5 Free 10, Font Awesome 5 Free Solid 10, Font Awesome 5 Brands 10",
      "mode": "dock",
      "position": "bottom",
      "select": "clock",
      "separator_symbol": " \u2551 ",
      "target": "..",
      "template": "tpl",
      "tray_padding": "3"
    },
    "targets": {
      "laptop": {
        "output": "eDP-1",
        "position": "bottom",
        "select": "full"
      },
      "left-external": {
        "output": "DP-2-2-8",
        "position": "bottom",
        "select": "full"
      },
      "right-external": {
        "output": "DP-1-2",
        "position": "bottom",
        "select": "full"
      },
      "HDMI": {
        "mode": "dock",
        "output": "HDMI-1",
        "position": "bottom"
      }
    }
  },
  "main": {
    "i3_refresh_msg": "restart",
    "status_command": "py3status",
    "log": null,
    "notify": true,
    "target": "../config"
  }
}
